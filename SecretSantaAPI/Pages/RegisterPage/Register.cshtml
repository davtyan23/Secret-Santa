@page
@model SecretSantaAPI.Pages.RegisterPage.RegisterModel
@{
    Layout = null; // If you have a layout, specify it here or set to null if standalone.
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2 class="my-5">Register</h2>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-success">@Model.Message</div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <form method="post">
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                <label name="Input.FirstName">First Name</label>
                <input name="Input.FirstName" class="form-control" required />
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="form-group">
                <label name="Input.LastName">Last Name</label>
                <input name="Input.LastName" class="form-control" required />
            </div>

            <div class="form-group">
                <label name="Input.Email">Email</label>
                <input name="Input.Email" class="form-control" required />
            </div>

            <div class="form-group">
                <label name="Input.Password">Password</label>
                <input name="Input.Password" class="form-control" type="password" required />
            </div>

            <div class="form-group">
                <label name="Input.PhoneNumber">Phone Number</label>
                <input name="Input.PhoneNumber" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
